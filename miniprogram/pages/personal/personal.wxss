/* pages/personal/personal.wxss */
@import "../../colorui/animation.wxss";
/* wave */
image[class*="gif-"] {
  display: block;
}
.margin.radius.shadow-blur.wave-bg{
  /* margin-top: 100rpx; */
  width: 100%;
  margin: 300rpx 0rpx 0rpx;
  position: absolute;
}
.bgimg-green{
  position: absolute;
  width: 100%;
  height: 400rpx;
}

.pageback{
  background-color: whitesmoke;
  display: flex;
  flex-direction: column;
  width: 750rpx;
  height: 100%;
}
.top{
  background-color:#67cd80;
  width:100%;
  height:400rpx;
}
.manage{
  background-color:white;
  width: 100%;
  height: 300rpx;
  /* margin-bottom: 30rpx; */
  padding-top: 20rpx;
  position:relative;
  z-index: 1;
}
.manage-text{
  width: 100%;
  height:50rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  font-size: 14px;
}
.manage-mid{
  width: 100%;
  height:130rpx;
}
.manage-images{
  width: 130rpx;
  height:130rpx;
  float: left;
  margin-left: 70rpx;
}
.manage-bott{
  width: 100%;
  height: 40rpx;
  margin-bottom: 20rpx;
}
.manage-name{
  height:40rpx;
  float: left;
  font-size: 14px;
  margin-left: 80rpx;
}
.personalized{
  background-color:white;
  width: 100%;
  margin-bottom: 30rpx;
  position:relative;
  border-top:1rpx solid #e9e8e8;
  border-bottom:1rpx solid #e9e8e8;
}
.function{
  background-color:white;
  width: 100%;
  position:relative;
  border-top:1rpx solid #e9e8e8;
  border-bottom:1rpx solid #e9e8e8;
}
.mid{
  width: 100%;
  height: 400rpx;
  flex-direction: row;
}
.mid-left{
  width: 200rpx;
  height:200rpx;
  float: left;
}
.head{
  width: 140rpx;
  height:140rpx;
  
  margin: 220rpx auto 0rpx;
  border-radius: 50%;
  z-index: 2;
  position:relative;
  border: 7rpx solid white;
}
.name{
  z-index: 2;
  position:relative;
  margin-top: 200rpx;
  font-weight:bold;
}
.mid-top{
  width: 100%;
  height:200rpx;
  float: left;
  flex-direction: column;
  margin: 0 auto;
  text-align: center;
}
.mid-bottom{
  width: 100%;
  height:100rpx;
  line-height: 70rpx;
  float: left;
  flex-direction: column;
  margin: 0rpx auto;
  text-align: center;
}

.true{
  margin: auto auto;
}
.icon{
  width: 40rpx;
  height: 40rpx;
  margin-top:25rpx;
  margin-right: 5rpx;
}
.manage_content{
  width: 85%;
  height: 40%;
  margin: auto auto;
  margin-top: 130rpx;
  border-bottom: 3rpx solid#bfd3c4;
}
.like{
  width:34%;
  height:100%;
  float: left;
  text-align: center;
  font-size: 28rpx;
}
.msg{
  width:32%;
  height:100%;
  float: left;
  text-align: center;
  font-size: 28rpx;
}
.history{
  width:34%;
  height:100%;
  float: left;
  text-align: center;
  font-size: 28rpx;
}
.m_data{
  margin-top: 20rpx;
}
